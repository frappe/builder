		"insert_after": "published",
		"collapsible": 1
	},
	{
		"doctype": "Custom Field",
		"dt": "Builder Page",
		"fieldname": "modula_project_id",
		"fieldtype": "Data",
		"label": "Modula Project ID",
		"insert_after": "modula_section",
		"description": "Unique identifier from Modula/Forge system"
	},
	{
		"doctype": "Custom Field",
		"dt": "Builder Page",
		"fieldname": "modula_build_code",
		"fieldtype": "Data",
		"label": "Build Code",
		"insert_after": "modula_project_id",
		"description": "Unique build identifier (e.g., b_abc123)",
		"read_only": 1
	},
	{
		"doctype": "Custom Field",
		"dt": "Builder Page",
		"fieldname": "modula_build_type",
		"fieldtype": "Select",
		"label": "Build Type",
