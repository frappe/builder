		"options": "profile_tab\nwidget\npage\ncomponent\nlayout\ncard",
		"default": "component"
	},
	{
		"doctype": "Custom Field",
		"dt": "Builder Page",
		"fieldname": "modula_column_break",
		"fieldtype": "Column Break",
		"insert_after": "modula_build_type"
	},
	{
		"doctype": "Custom Field",
		"dt": "Builder Page",
		"fieldname": "modula_version",
		"fieldtype": "Data",
		"label": "Version",
