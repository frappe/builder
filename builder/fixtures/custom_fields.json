	},
	{
		"doctype": "Custom Field",
		"dt": "Builder Page",
		"fieldname": "modula_published_at",
		"fieldtype": "Datetime",
		"label": "Last Published At",
		"insert_after": "modula_version",
		"read_only": 1
	},
	{
		"doctype": "Custom Field",
		"dt": "Builder Page",
		"fieldname": "modula_callback_url",
		"fieldtype": "Data",
		"label": "Callback URL",
		"insert_after": "modula_published_at",
		"description": "Modula endpoint to notify on publish"
